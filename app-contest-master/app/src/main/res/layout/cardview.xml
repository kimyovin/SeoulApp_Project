<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/policy_content"
    android:padding="8dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:textAlignment="center"
                android:textSize="18dp"
                android:id="@+id/tv_policycategory"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_weight="7.7"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/tv_policyname"
                />

            <ImageButton
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/scrap_button"
                android:id="@+id/ib_scrapbutton"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5.5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_policycontent"
                android:textSize="16dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="right"
            android:padding="3dp"
            >

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/ib_likebutton"
                android:background="@drawable/like_button"
                android:scaleType="centerInside"

                />



            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/tv_likecount"
                />


            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="  "
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_button"
                android:id="@+id/iv_comment"
                android:scaleType="centerInside"

                />





            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_comentcount"
                android:textSize="20dp"
                />



        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>